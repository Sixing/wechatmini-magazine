
.container {
  width: 700rpx;
}

.poster-container,
.video {
  width: 700rpx;
  height: 400rpx;
}

.poster-container {
  position: relative;
}

.poster {
  height: 100%;
  width: 100%;
}

.controller {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(0,0,0,.6);
}

.play-btn {
  width: 25rpx;
  height: 25rpx;
}

.duration {
  font-size: 24rpx;
  color: #fff;
}

.main-title {
  font-size: 40rpx;
  padding: 20rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 1334rpx;
  background-color: rgba(0,0,0,.6);
}