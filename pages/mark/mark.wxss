.user-container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  background-color: #fff;
  width: 700rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}

.user-name {
  font-size: 40rpx;
}

.user-avator {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-avator image {
  width: 100rpx;
  height: 100rpx;
}

.share {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.share image {
  width: 50rpx;
  height: 50rpx;
}

.getUserInfo {
  padding: 0;
  border: 0;
}